    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/show_main_layout" 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        
        
        >
        
        <ImageView 
            android:id="@+id/show_image"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
                        
            />
        
        <ProgressBar 
            android:id="@+id/prog_show_image"
             android:layout_height="match_parent"
            android:layout_width="match_parent"
            
            />
    </LinearLayout>
    

</LinearLayout>
