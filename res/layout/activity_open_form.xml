<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent" 
    android:orientation="vertical"
     xmlns:android="http://schemas.android.com/apk/res/android">
   
    
    
   
    <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#2c2c2c"     >
        
        <LinearLayout 
            android:id="@+id/main_form_header"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/header"
            android:layout_alignParentTop="true"
            >
            <LinearLayout 
                 android:id="@+id/lay_text_cancel"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:layout_weight="1"  
              android:orientation="vertical"
                
                >
                <TextView 
                      android:id="@+id/text_cancel"	
                      android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:text="BACK"
                     android:textSize="17dp"
                     android:textColor="#dc5100"
                     android:gravity="center_vertical|left"
                     android:paddingLeft="10dp"
                      
                      
                      />
                
                
                
            </LinearLayout>
             <LinearLayout 
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:layout_weight="1"  
              android:orientation="vertical"
              
                
                >
                 <TextView
                     android:id="@+id/text_FORM"
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:text="FORM"
                     android:textSize="20dp"
                     android:textColor="#fff"
                     android:gravity="center_vertical|center"
                     
                     
                      />
                 
                 
             </LinearLayout>
              <LinearLayout
                  android:id="@+id/lay_text_done" 
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:layout_weight="1"  
              android:orientation="vertical"
                
                >
                  <TextView 
                      android:id="@+id/text_done"	
                      android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     
                     android:textSize="17dp"
                     android:textColor="#dc5100"
                     android:gravity="center_vertical|right"
                     android:paddingRight="10dp"
                      
                      
                      />
                  
              </LinearLayout>
             </LinearLayout>
        <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#1e1e1e"
            
            />
        <LinearLayout 
            
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            
            
            >
            <ScrollView 
                android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:fillViewport="true"
                >
                <RelativeLayout 
                    android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                
                 android:orientation="vertical"
                    
                    
                    >
                    <LinearLayout 
                        android:id="@+id/main_lay_openform"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                        
                        >
                        <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
                            
                            >
                            <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="2"
                      android:gravity="center_vertical|left"
                            
                            >
                            <TextView 
                                android:id="@+id/account_name_hint"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="Account Name"
                                android:textSize="18dp"
                                android:textColor="#dc5100"
                                
                                />
                            </LinearLayout>
                             <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
                       android:gravity="center_vertical|left"
                            
                            >
                            <TextView 
                                 android:id="@+id/account_name"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                
                                android:textSize="22dp"
                                android:textColor="#fff"
                                
                                />
                            </LinearLayout>
                        </LinearLayout>
                         <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#1e1e1e"
            
            />
                        <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
                            
                            >
                            <LinearLayout 
                                 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="2"
                      android:gravity="center_vertical|left"
                            
                            >
                            <TextView 
                                android:id="@+id/contact_name_hint"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="Contact Name"
                                android:textSize="18dp"
                                android:textColor="#dc5100"
                                
                                />
                            </LinearLayout>
                             <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
                       android:gravity="center_vertical|left"
                            
                            >
                            <TextView 
                                 android:id="@+id/contact_name"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                               
                                 android:textSize="22dp"
                                android:textColor="#fff"
                                
                                />
                            </LinearLayout>
                            
                            
                            
                            
                        </LinearLayout>
                         <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#1e1e1e"
            
            />
                        <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
                            
                            >
                            <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="2"
                      android:gravity="center_vertical|left"
                            
                            >
                            <TextView 
                                 android:id="@+id/phone_hint"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="Phone"
                               android:textSize="18dp"
                                android:textColor="#dc5100"
                                
                                />
                            </LinearLayout>
                             <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
                       android:gravity="center_vertical|left"
                            
                            >
                            <TextView 
                                android:id="@+id/form_phone"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                             
                                  android:textSize="22dp"
                                android:textColor="#fff"
                                
                                />
                            </LinearLayout>
                            
                        </LinearLayout>
                         <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#1e1e1e"
            
            />
                        <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
                            
                            >
                            <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="2"
                      android:gravity="center_vertical|left"
                            
                            >
                            <TextView 
                                android:id="@+id/source_hint"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="Source"
                                android:textSize="18dp"
                                android:textColor="#dc5100"
                                
                                />
                            </LinearLayout>
                             <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
                       android:gravity="center_vertical|left"
                            
                            >
                            <TextView 
                                android:id="@+id/form_source"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                
                                  android:textSize="22dp"
                                android:textColor="#fff"
                                
                                />
                            </LinearLayout>
                            
                        </LinearLayout>
                         <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#1e1e1e"
            
            />
                        <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
                            
                            >
                            <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="2"
                      android:gravity="center_vertical|left"
                            
                            >
                            <TextView 
                                android:id="@+id/rate_hint"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="Rate"
                               android:textSize="18dp"
                                android:textColor="#dc5100"
                                
                                />
                            </LinearLayout>
                             <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
                       android:gravity="center_vertical|left"
                            
                            >
                            <TextView 
                                android:id="@+id/form_rate"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                               
                                 android:textSize="22dp"                          
                                       android:textColor="#fff"
                                
                                />
                            </LinearLayout>
                        </LinearLayout>
                         <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#1e1e1e"
            
            />
                        <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
                            
                            >
                            <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="2"
                      android:gravity="center_vertical|left"
                            
                            >
                            <TextView 
                                android:id="@+id/ndrate_hint"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="2nd Rate"
                               android:textSize="18dp"
                                android:textColor="#dc5100"
                                
                                />
                            </LinearLayout>
                             <LinearLayout 
                              android:layout_height="match_parent"
                        android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
                       android:gravity="center_vertical|left"
                            
                            >
                            <TextView 
                                android:id="@+id/from_ndrate"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                               
                                 android:textSize="22dp"
                                android:textColor="#fff"
                                
                                />
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView 
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:background="@drawable/line_side"
                                />
                        <LinearLayout
                           android:id="@+id/addition_layout"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical" >
                       </LinearLayout>
                         
                    </LinearLayout>
                    
                </RelativeLayout>
                
                </ScrollView>
          
            
            
        </LinearLayout>
        
        
        
    </LinearLayout>
    
    
</LinearLayout>