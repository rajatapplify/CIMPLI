<LinearLayout 
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout 
    android:id="@+id/main_project_saved"
     android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#2c2c2c"
    >

<LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/header"
            
            >
            <LinearLayout 
                 android:id="@+id/lay_text_acrhives"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:layout_weight="1"  
              android:orientation="vertical"
                
                >
                
                
            </LinearLayout>
             <LinearLayout 
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:layout_weight="1"  
              android:orientation="vertical"
              
                
                >
                 <TextView
                     android:id="@+id/text_cimpli"
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:text="CIMPLI"
                     android:textSize="20dp"
                     android:textColor="#fff"
                     android:gravity="center_vertical|center"
                     
                     
                      />
                 
                 
             </LinearLayout>
              <LinearLayout
                  android:id="@+id/lay_text_done" 
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:layout_weight="1"  
              android:orientation="vertical"
                
                >
                 
              </LinearLayout>
            </LinearLayout>
            
	<View 
	    android:layout_height="1dp"
	    android:layout_width="match_parent"
	    android:background="#1e1e1e"
	    />
	
		<LinearLayout 
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
		    android:orientation="vertical"
		    android:layout_weight="1"
		    >
             <LinearLayout 
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
		    android:orientation="vertical"
		    android:layout_weight="1.2"
		    > 
		    
		     </LinearLayout>
		              
	<View 
	    android:layout_height="1dp"
	    android:layout_width="match_parent"
	    android:background="#1e1e1e"
	    />
		     <LinearLayout 
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
		    android:orientation="vertical"
		    android:layout_weight="1"
		    android:background="#383838"
		    > 
		    <LinearLayout 
		       
		        android:layout_height="match_parent"
		         android:layout_width="match_parent"
		         android:layout_weight="1"
		         android:gravity="center_vertical|center"
		        >
		        <TextView 
		            android:id="@+id/text_project_saved"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:text="PROJECT\n  SENT"
		            android:textColor="#FFF"
		            android:textSize="24dp"
		            
		            />
		        
		    </LinearLayout>
		     <LinearLayout 
		        
		        android:layout_height="match_parent"
		         android:layout_width="match_parent"
		         android:layout_weight="1"
		         android:gravity="center|top"
		        >
		         <ImageView 
		             android:id="@+id/img_project_saved"
		             android:layout_height="wrap_content"
		             android:layout_width="wrap_content"
		             android:background="@drawable/done_image"
		             
		             
		             
		             />
		         
		         
		     </LinearLayout>
		     </LinearLayout>
		              
	<View 
	    android:layout_height="1dp"
	    android:layout_width="match_parent"
	    android:background="#1e1e1e"
	    />
		      <LinearLayout 
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
		    android:orientation="vertical"
		    android:layout_weight="1"
		    > 
		    
		     </LinearLayout>
		    
		    </LinearLayout>
		    
		    
		    
		</LinearLayout>
	
	
            </LinearLayout>
      