<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#2c2c2c">
    <LinearLayout 
        
        android:id="@+id/main_list_archives"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#2c2c2c"
        android:layout_marginTop="10dp"
        
        
        >
        <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#1e1e1e"
            />
        <LinearLayout 
            android:id="@+id/move_archives"
             android:layout_height="match_parent"
        	android:layout_width="match_parent"
        	android:orientation="horizontal"
        	
            
            >
            
            <LinearLayout
                   android:id="@+id/lay_tittle_list"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight=".6" 
                android:background="#383838"
                android:gravity="center_vertical|center"
                >
                <TextView 
                    android:id="@+id/job_tittle_list"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Job Tittle"
                  android:textColor="#fff"
                  android:textSize="20dp"
                    
                    />
                
                
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/lay_time_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#383838"
                android:orientation="vertical" 
                 android:gravity="center_vertical|center">
                
                <TextView 
                    android:id="@+id/time_list"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="time"
                  android:textColor="#fff"
                  android:textSize="15dp"
                    
                    />
                
                
            </LinearLayout>
            <LinearLayout 
              android:id="@+id/lay_arrow_next"
                 android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.2"
                 android:background="#383838" 
                  android:gravity="center_vertical|center">
                <ImageView 
                    android:id="@+id/arrow_next"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/next_arrow"
                    
                    />
               <CheckBox 
                   android:id="@+id/archive_check"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:visibility="gone"
                   
                   />
                
                
            </LinearLayout>
        </LinearLayout>
     
    </LinearLayout>
       
        <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#1e1e1e"
            />

</LinearLayout>
